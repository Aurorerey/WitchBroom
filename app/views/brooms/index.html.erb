<div class="container">
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Twigs</th>
      <th>Power</th>
      <th>Age</th>
      <th colspan="6"></th>
    </tr>
  </thead>
<tbody>
    <% @brooms.each do |broom| %>
      <tr>
        <td><%= broom.name %></td>
        <td><%= broom.description %></td>
        <td><%= broom.price %></td>
        <td><%= broom.twigs %></td>
        <td><%= broom.power %></td>
        <td><%= broom.age %></td>
        <td><%= link_to 'Show', broom_path(broom) %></td>
        <td><%= link_to 'New', new_broom_path(broom) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
