<head>
  <link href='https://api.mapbox.com/mapbox-gl-js/v1.11.1/mapbox-gl.css' rel='stylesheet' />
</head>
<body>
<div class="container">
    <% @brooms.each do |broom| %>
    <div class="block">
      <div class="block_image">
      <%= image_tag "Brooms images/balaisasia.png", alt: "alttext" %>
      </div>
      <div class="block_info" style="color:grey;">
        <h1 style="color:black;"><%= broom.name %></h1>
        <p><i><%= broom.description %></p></i>
        <div>
          <p><button type="button" class="btn btn-light"><%= broom.price %>$ /day</button></p>
          <td><button type="button" class="btn btn-light"><%= link_to 'Show', broom_path(broom) %></td></button>
        </div>
    </div>
  </div>
    <% end %>
</div>
<div id="map" style="height: 300px; width: 600px"></div>
</body>
